<h1 class="general">Comment: <%= @comment.content %> by user: <%= link_to @comment.user.username, user_path(@comment.user) %></h1>
<h2 class="general">Goal: <%= link_to @comment.goal.content, goal_path(@comment.goal) %></h2>
<h2 class="general">Category: <%= link_to @comment.goal.category.name, category_path(@comment.goal.category) %></h2>

<% if logged_in? && @comment.user_id == current_user.id %>
<button class="btn"><%= link_to "Edit this comment", edit_comment_path(@comment) %></button> | <button class="btn"><%= link_to "Delete this comment", @comment, method: :delete, data: { confirm: "Do you really want to delete this comment?" } %></button>
<% end %>