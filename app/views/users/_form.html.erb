<% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |error| %>
            <h4 class="err"><%= error %></h4>
        <% end %>
    <% end %>

<%= form_with model: @user do |f| %>
<%= f.label "Username: " %><%= f.text_field :username, autofocus: true %><br><br>
<%= f.label "Location: " %><%= f.text_field :location %><br><br>
<%= f.label "Email: " %><%= f.email_field :email %><br><br>
<%= f.label "Password: " %><%= f.password_field :password %><br><br>
<%= f.label "Confirm password: " %><%= f.password_field :password_confirmation %><br><br>
<%= f.submit %>
<% end %>

<br><br>
<% if @user != logged_in? %>
You can also
<br><br>
<%= button_to "Sign up with Facebook", "/auth/facebook" %>
<% end %>