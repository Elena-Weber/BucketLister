<h1 class="general">User: <%= @user.username %></h1>
<h3>Location: <%= @user.location %></h3>

<h2 class="general">User <%= @user.username %> has set these goals:</h2>
<ul><% @user.goals.each do |goal| %>
<li><%= link_to goal.content, user_goal_path(@user, goal) %></li>
<% end %></ul>

<% if logged_in? && @user.id == current_user.id %>
<button class="btn"><%= link_to "Create a new goal", new_goal_path(@goal) %></button>
<% end %>

<h3 class="general">User <%= @user.username %> has commented:</h3>
<ul><% @user.comments.each do |comment| %>
<li><%= link_to comment.content, user_comment_path(@user, comment) %> - for a goal - <%= link_to comment.goal.content, goal_path(comment.goal) %></li>
<% end %></ul>