<% if @user %>
<h2 class="general">User <%= link_to @user.username, user_path(@user) %> has commented <%= @user.comments.count %> time(s):</h2>
<ul><% @user.comments.each do |comment| %>
<li><%= link_to comment.content, user_comment_path(@user, comment) %> - for a goal - <%= link_to comment.goal.content, goal_path(comment.goal) %></li>
<% end %></ul>
<% else %>

<h1 class="general">Our Achievers' comments - get motivated:</h1>
<ul><% @comments.each do |comment| %>
<li><%= link_to comment.content, comment_path(comment) %> for a goal: <%= link_to comment.goal.content, goal_path(comment.goal) %></li>
<% end %></ul>

<% end %>